            ],
            "url": { "raw": "{{base_url}}/team/add", "host": ["{{base_url}}"], "path": ["team", "add"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"team_name\": \"backend\",\n  \"members\": [\n    { \"user_id\": \"u1\", \"username\": \"Alice\", \"is_active\": true },\n    { \"user_id\": \"u2\", \"username\": \"Bob\", \"is_active\": true }\n  ]\n}"
            }
          },
          "response": []
        },
        {
          "name": "Get Team",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{admin_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/team/get?team_name=backend",
              "host": ["{{base_url}}"],
              "path": ["team", "get"],
              "query": [{ "key": "team_name", "value": "backend" }]
            }
          },
          "response": []
        }
      ]
    },
